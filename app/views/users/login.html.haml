.sub-container 

  =render 'common/sub_header'

  %main.login-main
    .login-panel
      .login-panel__no-account
        %p アカウントをお持ちでない方はこちら
        = link_to '' do
          新規会員登録
      .login-form-inner
        .main-block__buttons.facebook
          %i.fa.fa-facebook-square.sns__icon
          %p Facebookでログイン
        .main-block__buttons.google
          %i.fa.fa-google.sns__icon
          %p Googleでログイン
      %form
        .login-inner
          .form-group_l
            %input.login-form-inner__input{placeholder: "メールアドレス"}
            %input.login-form-inner__input{placeholder: "パスワード"}
          .form-group
            %figure
              = image_tag 'recaptcha.png', class: "recaptcha-center"
          .form-group
            %button.profile_chapter__btn
              ログイン
            .form-group.uinfo_chapter__right
              %p.number_text.number_left
                = link_to '' do
                  パスワードをお忘れの方
.lo_footer
  =render 'common/sub_footer'