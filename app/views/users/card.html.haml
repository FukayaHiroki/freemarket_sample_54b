.sub-container
  %header.progress-header
    = link_to root_path, class:"sub-header__image" do
      = image_tag"logo.svg"
    .progress-header__image.progress
      = image_tag "progress_bar4.png"

.main_wrapper
  %main.main-block
    %section.main-block__container
      %h2.main-block__head.registration 支払い方法
      = form_tag(set_card_path, method: :post, class: "main-block__inner registration-form ", id: "charge-form") do
        .payment-errors
        .main-block__content
          .card.mypage_card
            %span.charge-errors
            .card__form__content
              .card__form__group
                .card__form__group__title
                  %label カード番号
                  %span.form-require 必須
                %input.number{maxlength: "16", name: "number", placeholder: "半角数字のみ", type: "text", class: "card__form__group__box number", id: "card_number"}/
                %ul.card__form__group__images
                  %li 
                  = image_tag "credit_card/visa.svg",class: "card__img"
                  %li 
                  = image_tag "credit_card/master-card.svg",class: "card__img"
                  %li 
                  = image_tag "credit_card/saison-card.svg",class: "card__img"
                  %li 
                  = image_tag "credit_card/jcb.svg",class: "card__img"
                  %li 
                  = image_tag "credit_card/american_express.svg",class: "card__img"
                  %li 
                  = image_tag "credit_card/dinersclub.svg",class: "card__img"
                  %li 
                  = image_tag "credit_card/discover.svg",class: "card__img"
              .card__form__group
                .card__form__group__title
                  %label 有効期限
                  %span.form-require 必須
                .card__form__group__date
                  .card__form__group__date__sub
                    %label
                      = fa_icon 'angle-down', class:"card-icon"
                    .select
                      %select.exp_month{name: "exp_month", class: "card__form__group__box card__form__group__box--number", id: "exp_month"}
                        %option{value: 1}01
                        %option{value: 2}02
                        %option{value: 3}03
                        %option{value: 4}04
                        %option{value: 5}05
                        %option{value: 6}06
                        %option{value: 7}07
                        %option{value: 8}08
                        %option{value: 9}09
                        %option{value: 10}10
                        %option{value: 11}11
                        %option{value: 12}12
                      %span 月
                  .card__form__group__date__sub
                    %label
                      = fa_icon 'angle-down', class:"card-icon"
                    .select
                      %select.exp_month{name: "exp_year", class: "card__form__group__box card__form__group__box--number", id: "exp_year"}
                        %option{value: "2019"}19
                        %option{value: "2020"}20
                        %option{value: 2021}21
                        %option{value: 2022}22
                        %option{value: 2023}23
                        %option{value: 2024}24
                        %option{value: 2025}25
                        %option{value: 2026}26
                        %option{value: 2027}27
                        %option{value: 2028}28
                        %option{value: 2029}29
                      %span 年
              .card__form__group
                .card__form__group__title
                  %label セキュリティコード
                  %span.form-require 必須
                %input.cvc{:maxlength => "4", :name => "cvc", :placeholder => "カード背面4桁もしくは3桁の番号", :type => "text", class:"card__form__group__box cvc",id: "cvc"}
                .uinfo_chapter__right.u_text
                  %p
                    = link_to '' do
                      = fa_icon 'question-circle', class: "uinfo_l_icon"
                      カード裏面の番号とは？
              = submit_tag "次へ進む", class: "card__form__submit", id: "token_submit"
.m_footer
  =render 'common/sub_footer'