.sub-container
  %header.progress-header
    = link_to root_path, class:"sub-header__image" do
      = image_tag"logo.svg"
    .progress-header__image.progress
      = image_tag "progress_bar3.png"

  .main_wrapper
    %main.main-block
      %section.main-block__container
        %h2.main-block__head.registration 発送元・お届け先住所入力
        = form_for(@adress, url: {controller: "users", action: "set_adress"},html: {class: "main-block__inner registration-form"}) do |f| 
          .main-block__content
            .form-group
              = f.label [:family_name, :first_name], "お名前",class: "main-block__label"
              %span.form-require.main-block__name 必須
              = f.text_field :family_name, placeholder: "例) 山田", class:"input_default", value: current_user.family_name
              = f.text_field :first_name, placeholder: "例) 彩", class:"input_default", value: current_user.first_name
            .form-group
              = f.label [:family_name_kana, :first_name_kana], "お名前カナ",class: "main-block__label"
              %span.form-require.main-block__name 必須
              = f.text_field :family_name_kana, placeholder: "例）ヤマダ", class:"input_default", value: current_user.family_name_kana
              = f.text_field :first_name_kana, placeholder: "例）アヤ", class:"input_default", value: current_user.first_name_kana
            .form-group
              = f.label :postal_code, "郵便番号",class: "main-block__label"
              %span.form-require.main-block__name 必須
              = f.text_field :postal_code, placeholder: "例）1234567", class:"input_default"
            .form-group
              = f.label :prefecture_id, "都道府県",class: "main-block__label"
              %span.form-require.main-block__name 必須
              = f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {prompt: "--"}, {class: "input_default"})
            .form-group
              = f.label :city, "市区町村",class: "main-block__label"
              %span.form-require.main-block__name 必須
              = f.text_field :city, placeholder: "例) 横浜市緑区", class:"input_default"
            .form-group
              = f.label :block, "番地",class: "main-block__label"
              %span.form-require.main-block__name 必須
              = f.text_field :block, placeholder: "例) 青山1−1−1", class:"input_default"
            .form-group
              = f.label :building, "建物名",class: "main-block__label"
              %span.form-arbitray.main-block__name 任意
              = f.text_field :building, placeholder: "例) 柳ビル103", class:"input_default"
            .form-group
              = f.label :sub_phone, "電話",class: "main-block__label"
              %span.form-arbitray.main-block__name 任意
              = f.text_field :sub_phone, placeholder: "0312345678", class:"input_default"
            .form-group
              =f.submit "次へ進む", class: "profile_chapter__btn", id: "adress_submit_btn"
  .m_footer
    =render 'common/sub_footer'