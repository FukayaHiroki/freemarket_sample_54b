.user-container
  .my_page_header
    = render 'common/main-header'
    = render 'common/bread'

  .wrapper
    .my_page_main_container
      .my_page_side_bar
        .my_list
          = render 'common/side_bar'
    
    .profile_container
      %section.profile_chapter
        %h2.profile_chapter__head
          プロフィール
        .profile_chapter__set-icon
          %figure
            = image_tag 'profile_icon.png'
          = text_field :input,'', class: 'input_page', placeholder: '例)AYA☆セール中', value: current_user.nickname
        %form
          .profile_chapter__set-content
            = text_area :page, :comtent,class: 'textarea', placeholder: '例）こんにちは☆ ご覧いただきありがとうございます！かわいいものやきれいめオフィスカジュアル中心に出品しています。服のサイズは主に9号です。気持ちよくお取引できるよう心がけていますので、商品や発送方法などご質問がありましたらお気軽にどうぞ♪', value: current_user.introduction
            %button.profile_chapter__btn
              変更する
  .top-banner
    = image_tag "top_page_footer_banner.jpg", class: "topbanner"
  .my_page_footer
    = render 'common/top-footer'