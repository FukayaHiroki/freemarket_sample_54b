.bread
  %ul.bread__content
    %li.bread__link
      - case params.values_at :controller, :action
      - when ['users', 'show']
        - breadcrumb :user_mypage
      - when ['users', 'profile']
        - breadcrumb :profile
      - when ['users', 'logout']
        - breadcrumb :user_sign_out
      - when ['users', 'identification']
        - breadcrumb :identification
      - when ['products','show']
        - breadcrumb :products_show
      - when ['cards','index']
        - breadcrumb :cards_index
      - when ['cards','new']
        - breadcrumb :cards_new
      = breadcrumbs separator: " &rsaquo; "